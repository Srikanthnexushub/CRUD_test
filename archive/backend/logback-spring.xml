<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender - only for critical errors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set root logging level to OFF (completely disable logging) -->
    <root level="OFF">
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Completely suppress all logs -->
    <logger name="org.springframework" level="OFF" additivity="false"/>
    <logger name="org.springframework.boot" level="OFF" additivity="false"/>
    <logger name="org.springframework.web" level="OFF" additivity="false"/>
    <logger name="org.springframework.data" level="OFF" additivity="false"/>
    <logger name="org.springframework.orm" level="OFF" additivity="false"/>
    <logger name="org.hibernate" level="OFF" additivity="false"/>
    <logger name="org.hibernate.SQL" level="OFF" additivity="false"/>
    <logger name="org.hibernate.type" level="OFF" additivity="false"/>
    <logger name="org.hibernate.engine" level="OFF" additivity="false"/>
    <logger name="com.zaxxer.hikari" level="OFF" additivity="false"/>
    <logger name="org.apache.catalina" level="OFF" additivity="false"/>
    <logger name="org.apache.tomcat" level="OFF" additivity="false"/>
    <logger name="org.postgresql" level="OFF" additivity="false"/>
    <logger name="jdbc" level="OFF" additivity="false"/>
    <logger name="jdbc.sqlonly" level="OFF" additivity="false"/>
    <logger name="jdbc.sqltiming" level="OFF" additivity="false"/>
    <logger name="jdbc.audit" level="OFF" additivity="false"/>
    <logger name="jdbc.resultset" level="OFF" additivity="false"/>
    <logger name="jdbc.connection" level="OFF" additivity="false"/>

    <!-- Application logs - completely off -->
    <logger name="org.example" level="OFF" additivity="false"/>
</configuration>
