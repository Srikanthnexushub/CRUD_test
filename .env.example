# ============================================================================
# CRUD Test Application - Environment Variables Template
# ============================================================================
# Copy this file to .env for local development
# For production, set these variables in your deployment environment
#
# SECURITY WARNING: Never commit .env files with real credentials to Git!
# ============================================================================

# ============================================================================
# SPRING PROFILE
# ============================================================================
# Options: dev, test, prod
SPRING_PROFILES_ACTIVE=dev

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
SERVER_PORT=8080

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Development (local PostgreSQL)
DB_URL=jdbc:postgresql://localhost:5432/crud_test_db
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Production (use secure credentials)
# DB_URL=jdbc:postgresql://your-prod-db-host:5432/crud_test_db
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_strong_db_password

# Connection Pool Settings
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA/Hibernate Settings
DB_DDL_AUTO=validate
DB_SHOW_SQL=false
DB_FORMAT_SQL=false

# ============================================================================
# FLYWAY MIGRATION
# ============================================================================
FLYWAY_ENABLED=true

# ============================================================================
# JWT SECURITY CONFIGURATION
# ============================================================================
# CRITICAL: Generate a strong, random secret key (minimum 256 bits)
# Use: openssl rand -base64 32
# Example: JWT_SECRET=YourVerySecureRandomSecretKeyThatIsAtLeast256BitsLongForHS256
JWT_SECRET=YourVerySecureRandomSecretKeyThatIsAtLeast256BitsLongForHS256AlgorithmPleaseChange

# JWT Token Expiration (milliseconds)
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# ============================================================================
# ADMIN USER CONFIGURATION
# ============================================================================
# These credentials are used to create the initial admin user
# Change the password immediately after first deployment
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# ============================================================================
# EMAIL / SMTP CONFIGURATION
# ============================================================================
# Gmail Example:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid Example:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# AWS SES Example:
# SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# SMTP_PORT=587
# SMTP_USERNAME=your-ses-smtp-username
# SMTP_PASSWORD=your-ses-smtp-password

# Application Email Settings
MAIL_FROM_ADDRESS=noreply@crudtest.com
MAIL_FROM_NAME=CRUD Test Application
MAIL_ENABLED=true

# ============================================================================
# REDIS CACHE CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Production Redis (with SSL)
# REDIS_HOST=your-redis-host.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_SSL_ENABLED=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=true

# ============================================================================
# ACTUATOR & MONITORING
# ============================================================================
ACTUATOR_SHOW_DETAILS=when-authorized

# Spring Boot Admin (optional)
SPRING_BOOT_ADMIN_ENABLED=false
SPRING_BOOT_ADMIN_URL=

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=WARN
LOG_LEVEL_SQL=WARN
LOG_LEVEL_SQL_BIND=WARN

# ============================================================================
# API DOCUMENTATION
# ============================================================================
SWAGGER_ENABLED=true
API_DOCS_ENABLED=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_MFA_ENABLED=true
FEATURE_AUDIT_ENABLED=true
FEATURE_THREAT_INTEL_ENABLED=true
FEATURE_EMAIL_NOTIFICATIONS=true

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Development
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Production (replace with your actual domain)
# CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# FILE UPLOAD
# ============================================================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ============================================================================
# ERROR HANDLING
# ============================================================================
# Options: never, on_param, always
ERROR_INCLUDE_STACKTRACE=never

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================
DEPLOYMENT_REGION=us-east-1
BANNER_MODE=console

# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# IP Geolocation Service
IPSTACK_API_KEY=your-ipstack-api-key

# Threat Intelligence Service
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# ============================================================================
# AWS CONFIGURATION (If using AWS services)
# ============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ============================================================================
# GOOGLE CLOUD CONFIGURATION (If using GCP services)
# ============================================================================
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GCP_PROJECT_ID=your-project-id

# ============================================================================
# DOCKER COMPOSE OVERRIDES (for local development)
# ============================================================================
POSTGRES_PASSWORD=postgres
POSTGRES_USER=postgres
POSTGRES_DB=crud_test_db
